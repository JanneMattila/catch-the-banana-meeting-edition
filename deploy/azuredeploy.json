{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appName": {
      "type": "string",
      "defaultValue": "[format('ctb{0}', uniqueString(resourceGroup().id))]"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "sku": {
      "type": "string",
      "defaultValue": "S2"
    }
  },
  "functions": [],
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2020-06-01",
      "name": "asp-webapp",
      "location": "[parameters('location')]",
      "kind": "linux",
      "sku": {
        "name": "[parameters('sku')]",
        "capacity": 1
      },
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2020-06-01",
      "name": "[parameters('appName')]",
      "location": "[parameters('location')]",
      "kind": "web",
      "properties": {
        "siteConfig": {
          "alwaysOn": true,
          "webSocketsEnabled": true,
          "http20Enabled": true,
          "ftpsState": "Disabled",
          "linuxFxVersion": "DOCKER|jannemattila/catch-the-banana:latest"
        },
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', 'asp-webapp')]",
        "httpsOnly": true,
        "clientAffinityEnabled": false
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', 'asp-webapp')]"
      ]
    }
  ]
}